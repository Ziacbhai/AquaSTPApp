<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#eaeff5"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/btnbgedited"
        android:orientation="horizontal"
        android:padding="5dp">



            <TextView
                android:id="@+id/pump_equip_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"

                android:text="Pump/motor"
                android:textColor="#000"
                android:textSize="12dp" />



        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />




            <TextView
                android:id="@+id/pumpmotor_start_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Start"
                android:textColor="#000"
                android:textSize="12dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

            <TextView
                android:id="@+id/pump_running_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Running"
                android:textColor="#000"
                android:textSize="12dp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />




            <ImageView
                android:id="@+id/pump_reload"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="16dp"
                android:gravity="center"
                android:src="@drawable/newshare"
                android:textColor="#fff"/>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />



            <ImageView
                android:id="@+id/pump_stop"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="18dp"
                android:gravity="center"
                android:src="@drawable/stop"
                android:textColor="#fff"/>

    </LinearLayout>


</LinearLayout>