<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eaeff5"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      app:cardMaxElevation="10dp"
      app:cardCornerRadius="10dp"
      android:padding="10dp"
      android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:gravity="center"
                android:id="@+id/pump_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/aqua_logo" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/vehicle_fullname1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Equipment details"
                        android:gravity="center"
                        android:textColor="#F30F0F"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/equipmentName"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="Equipment Name"
                            android:textColor="#151414"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/manufacturer"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="Manufacturer"
                            android:textColor="@color/black"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/equipmentNumber"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="Equipment Number/Id"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/specification"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="Specification"
                            android:textColor="#151414"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/rating_capacity"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Rating/Capacity"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/formFactor"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="Form Factor"
                            android:textColor="#151414"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/phase"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:drawablePadding="5dp"
                            android:text="Phase"
                            android:textColor="#151414"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cleaning_Running"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="Cleaning/Running Frequency in HRS"
                            android:textColor="#151414"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
  </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>