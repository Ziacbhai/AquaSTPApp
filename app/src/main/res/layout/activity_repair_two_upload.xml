<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeff5"
    android:orientation="vertical"
    tools:context=".Activities.RepairTwo_Upload_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/btn_gradient"
            android:elevation="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:src="@drawable/aquatoolbar" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/repairtwo_image_upload"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/newimageupload" />

        <EditText
            android:id="@+id/repair_two_Remark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/btnbgedited"
            android:hint="Remarks"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/repairtwo_image_upload_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="Submit"
                    android:background="@drawable/btnbg"                                   android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/repairtwo_image_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:background="@drawable/btnbg"                                   android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>