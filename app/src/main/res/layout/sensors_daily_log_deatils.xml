<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#eaeff5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/btnbgedited"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">


            <TextView
                android:id="@+id/sensor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Sensors"
                android:textColor="#000"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />

            <TextView
                android:id="@+id/sensor_reading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="Reading"
                android:textColor="#000"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />

            <TextView
                android:id="@+id/sensor_reading_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="Reading (T)"
                android:textColor="#000"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                   android:layout_marginRight="5dp"
                    android:layout_height="1dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/sensor_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Total"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />


            <ImageView
                android:id="@+id/sensor_image"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2.7"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/imageupload"
                android:textColor="#000"
                android:textSize="12dp" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />


            <ImageView
                android:id="@+id/sensor_image_upload_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/imageupload"
                android:textColor="#000"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
