<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#eaeff5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btnbgedited"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnbgedited"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/sensor_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:gravity="center|left"
                android:text="Sensor"
                android:textColor="#000"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#000" />

            <TextView
                android:id="@+id/sensor_reading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btnbgedited"
                android:gravity="center"
                android:hint="Reading"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#000" />

            <TextView
                android:id="@+id/sensor_reading_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:text="Time"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="12dp" />

            <View
                android:id="@+id/viewhide2"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#000" />

            <TextView
                android:id="@+id/sensor_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:text="Total"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="12dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/sensor_image"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2.7"
                android:padding="5dp"
                android:src="@drawable/aqua_logo"
                android:textColor="#000"
                android:textSize="12dp" />


            <View
                android:id="@+id/viewhide"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />


            <ImageView
                android:id="@+id/sensor_image_upload_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/imageupload"
                android:textColor="#000"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>
