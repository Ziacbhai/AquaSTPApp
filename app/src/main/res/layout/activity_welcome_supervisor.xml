<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeff5"
    android:orientation="vertical"
    tools:context=".Activities.WelcomeOwner">

    <!-- Add vertical spacing at the top -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Move the exit icon to the top right corner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingEnd="16dp">
        <ImageView
            android:id="@+id/ownerexit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cross" />
    </RelativeLayout>

    <!-- Adjust the size and margin of the CircleImageView -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:civ_border_color="#3FD5C7"
            app:civ_border_width="4dp" />
    </RelativeLayout>

    <!-- Add vertical spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <!-- Adjust alignment and spacing of text views -->
    <TextView
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="CompanyName"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Greetings, esteemed Supervisor!"
            android:textColor="#01a4a3"
            android:textSize="22sp"
            android:textStyle="italic"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="#F44336" />

        <TextView
            android:id="@+id/wname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth_bold"
            android:gravity="center_horizontal"
            android:text="Helloziac"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/wemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ziac@gmail.com"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="1234567890"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="The helm of AquaSTP awaits."
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="Dive into comprehensive insights."
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Add vertical spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- Adjust button size and margin -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/oContinue"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/profilebtnupdate"
        android:text="Continue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Add vertical spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <!-- Uncomment and adjust if needed -->
    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Details wrong ?" />
        <TextView
            android:id="@+id/Clickhere"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Click here"
            android:textColor="#F44336" />
    </LinearLayout>
    -->

</LinearLayout>
