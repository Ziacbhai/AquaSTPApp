<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/lobster</item>
    </style>

    <style name="checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint" tools:ignore="NewApi">@color/teal_200</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/appcolor</item>
        <item name="android:textSize">@color/appcolor</item>
    </style>
    <style name="DisabledDatePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:datePickerStyle">@style/DisabledDatePicker</item>
    </style>

    <style name="DisabledDatePicker">
        <!-- Customize the appearance of the DatePicker for disabled state -->
        <item name="android:background">@color/disabled_background_color</item>
        <item name="android:textColor">@color/disabled_text_color</item>
        <!-- Add any other attributes you want to customize -->
    </style>
    <!-- Light mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light mode styles here -->
    </style>

    <!-- Dark mode -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your dark mode styles here -->
        <item name="android:windowBackground">@color/black</item> <!-- Set the background color to black -->
        <item name="colorPrimary">@color/your_dark_primary_color</item> <!-- Customize primary color for dark mode -->
        <!-- Add more customizations as needed -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>